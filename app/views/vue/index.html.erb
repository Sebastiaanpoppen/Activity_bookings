<!DOCTYPE html>
<html>
  <head>
    <% if current_user.is_admin? %>
      <%= javascript_pack_tag 'admin-main' %>
    <% else %>
      <%= javascript_pack_tag 'parent-main' %>
    <% end %>
  </head>

  <body>
    <% if current_user.is_admin? %>
      <div id='admin-app'>
        <admin-app></admin-app>
      </div>
      <% else %>
      <div id='parent-app'>
        <parent-app></parent-app>
      </div>
      <% end %>
    </div>
  </body>
</html>
